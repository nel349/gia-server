{
    "version": 2,
    "builds": [
      {
        "src": "src/app.ts",
        "use": "@vercel/node",
        "config": {
          "nodeVersion": "20.x",
          "includeFiles": ["src/**/*", "templates/**/*", "message.md"],
          "buildCommand": "npm install && npm run build"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "src/app.ts"
      }
    ]
  }